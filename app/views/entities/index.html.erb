<h1 class="fw-bold text-success">Trustworthiness</h1>

<%= link_to "âž• Add Entity", new_entity_path, class: "btn btn-success fw-semibold mb-4" %>

<div class="row">
  <% @entities.each do |entity| %>
    <div class="col-md-4 mb-4">
      <%= link_to entity_path(entity), class: "text-decoration-none text-dark" do %>
        <div class="card shadow-sm position-relative h-100">
          <% if entity.cover_photo.attached? %>
            <%= image_tag entity.cover_photo, class: "card-img-top" %>
          <% end %>

          <div class="card-body text-center">
            <% if entity.profile_image.attached? %>
              <%= image_tag entity.profile_image.variant(resize_to_fill: [100, 100]), class: "rounded-circle mb-2" %>
            <% end %>
            <h5 class="card-title mb-0"><%= entity.full_name %></h5>

            <!-- Invisible full-card link -->
            <span class="stretched-link"></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
