<h1 class="fw-bold text-success">Add New Entity</h1>

<%= form_with model: @entity, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :full_name, class: "form-label" %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :profile_image, class: "form-label" %>
    <%= form.file_field :profile_image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cover_photo, class: "form-label" %>
    <%= form.file_field :cover_photo, class: "form-control" %>
  </div>

  <%= form.submit "Create Entity", class: "btn btn-success fw-semibold" %>
<% end %>
