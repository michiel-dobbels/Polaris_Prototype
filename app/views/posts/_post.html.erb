<div class="card mb-3 position-relative">
  <%= link_to post_path(post), class: "stretched-link position-absolute top-0 start-0 w-100 h-100", style: "z-index: 1;" do %>
  <% end %>

  <div class="card-body position-relative" style="z-index: 2;">
    <!-- User info -->
    <div class="d-flex align-items-center mb-2">
      <% if post.user.profile_image.attached? %>
        <%= image_tag post.user.profile_image.variant(resize_to_fill: [30, 30]), class: "rounded-circle me-2" %>
      <% end %>
      <%= link_to post.user.full_name, user_path(post.user), class: "fw-bold text-primary text-decoration-none" %>
    </div>

    <!-- Content -->
    <p><%= auto_link(h(@post.content), html: { target: "_blank", rel: "noopener" }).html_safe %>
</p>


    <!-- Image -->
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "img-fluid rounded mb-3" %>
    <% end %>

    <% if post.video.attached? %>
      <video width="100%" controls class="rounded mb-3">
        <source src="<%= url_for(post.video) %>" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    <% end %>


    <!-- Likes + Replies -->
    <div class="text-muted small">
      ‚ù§Ô∏è Likes: <%= post.likes.count %>
      &nbsp;&nbsp;üí¨ Replies: <%= post.replies.count %>
    </div>
  </div>
</div>
